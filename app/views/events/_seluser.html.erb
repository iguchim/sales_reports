<div class="modal fade" id="seluser">
  <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">メンバー選択</h4>
        </div>
        <div class="modal-body">
          <%= form_with(model: @reference_user, url: schedules_path, method: "get", local: true) do |fm| %>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th></th>
                  <th>色</th>
                  <th>名前</th>
                </tr>
              </thead>
              <tbody>
                <%= fm.collection_check_boxes(:user_ids, User.all, :id, :name) do |user| %>
                <%= user.label do %>
                  <tr>
                    <td><%= user.check_box :checked => is_member(user.object.id) %></td>
                    <td style="color: <%= user.object.color %>; font-size: 16px">■</td>
                    <td><%= user.object.name %></td>
                  </tr>
                <% end %>
                <% end %>
              </tbody>
            </table>
            <%= fm.submit'保存', class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
  </div>
</div>
